<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - school_management_system</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/school_management_system.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/echo-logo.ico" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="admin-layout">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <div class="logo">EP</div>
                <h3>EduPortal</h3>
                <span class="role-badge">Admin</span>
            </div>

            <ul class="sidebar-menu">
                <li><a asp-page="/Admin/index" class="active"><span class="icon">📊</span> Dashboard</a></li>
                <li><a asp-page="/Admin/Users/index"><span class="icon">👥</span> Users</a></li>
                <li><a asp-page="/Admin/Classes/index"><span class="icon">🏫</span> Classes</a></li>
                <li><a asp-page="/Admin/Reports/index"><span class="icon">📈</span> Reports</a></li>
                <li><a asp-page="/Admin/Fees/index"><span class="icon">💰</span> Fees</a></li>
                <li><a asp-page="/Admin/Schedules/index"><span class="icon">📅</span> Schedule</a></li>
                <li><a asp-page="/Admin/Inboxs/index"><span class="icon">✉️</span> Inbox</a></li>
                <li><a asp-page="/Index" onclick="logout()"><span class="icon">🚪</span> Logout</a></li>
            </ul>
        </nav>
        <!-- Main Content -->
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>