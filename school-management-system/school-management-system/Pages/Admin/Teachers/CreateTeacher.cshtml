@page
@model school_management_system.Pages.Admin.Teachers.CreateTeacherModel
@{
	Layout="_AdminLayout";
	ViewData["Title"]="Teacher-Add";
}
<div class="main-content"> 
    <div class="header">
        <h1>Add New Teacher</h1>
        <p>Fill in the information below to register a new teacher</p>
    </div>

    <div class="form-container">
        <h2 class="form-title">Teacher Information</h2>

        <form  method="POST" enctype="multipart/form-data">
            <!-- Personal Information Section -->
            <div asp-validation-summary="All"></div>
            <div class="section-header">Personal Information</div>
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Teacher.FirstName">First Name <span class="required">*</span></label>
                    <input type="text" asp-for="Teacher.FirstName" required>
                </div>
                <div class="form-group">
                    <label asp-for="Teacher.LastName">Last Name <span class="required">*</span></label>
                    <input type="text" asp-for="Teacher.LastName" required>
                </div>
                <div class="form-group">
                    <label asp-for="Teacher.Email">Email Address <span class="required">*</span></label>
                    <input type="email" asp-for="Teacher.Email" required>
                </div>
                <div class="form-group">
                    <label asp-for="Teacher.Phone">Phone Number</label>
                    <input type="tel" asp-for="Teacher.Phone">
                </div>
                </div>
                <div class="form-grid">
                <div class="form-group">
                    <label for="dob">Date of Birth <span class="required">*</span></label>
                    <input type="date" id="dob" name="dob" required>
                </div>
                <div class="form-group">
                    <label asp-for="Teacher.Gender">Gender <span class="required">*</span></label>
                    <select asp-for="Teacher.Gender" required>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                 <div class="form-group">
                    <label asp-for="Teacher.HireDate">Start date <span class="required">*</span></label>
                    <input type="date" asp-for="Teacher.HireDate" required>
                </div>
                <div class="form-group">
                    <label  class="form-label" asp-for="SelectedSubject">Subject <span class="required">*</span></label>
                    <select asp-for="SelectedSubject" asp-items="Model.SubjectItems" class="form-select" required>
                        <option seleted>Select Subject</option>
                    </select>
                </div>
            </div>

            <!-- Additional Information Section -->
            <div class="section-header">Additional Information</div>
            <div class="form-group full-width">
                <label for="notes">Special Requirements</label>
                <textarea id="notes" name="notes" rows="4" placeholder="Enter any special requirements, medical conditions, or additional notes..."></textarea>
            </div>

            <!-- Buttons -->
            <div class="button-group">
                <button type="button" class="btn btn-secondary">Cancel</button>
                <button type="submit" class="btn btn-primary">Add Teacher</button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="/css/admin-css/admin.css" />
    <link rel="stylesheet" href="/css/admin-css/user.css" />
    <link rel="stylesheet" href="/css/shared-css/css/reset.css">
    <link rel="stylesheet" href="/css/shared-css/typography.css">
    <link rel="stylesheet" href="/css/shared-css/components.css">
    <link rel="stylesheet" href="/css/shared-css/layout.css">
}