@page
@model school_management_system.Pages.Admin.Teachers.IndexModel
@{
    Layout="_AdminLayout";
    ViewData["Title"]="Admin-Teacher";
}
<main class="main-content">
    <header class="header">
        <div>
            <h1>Student Management</h1>
            <p class="text-gray-600">Manage all the Teacher</p>
        </div>
        <div class="header-actions">
            @* <button class="btn btn-secondary" onclick="exportUsers()">Export</button> *@
            <a role = "Button" class="btn btn-primary" asp-page = "CreateTeacher">Add Teacher</a>
        </div>
    </header>

    <!-- Filters -->
    <div class="filters-section">
        <div class="card">
            <div class="filters-grid">
                <div class="filter-group">
                    <label>Status</label>
                    <select id="statusFilter" onchange="filterUsers()">
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                        <option value="suspended">Suspended</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label>Search</label>
                    <input type="text" id="searchInput" placeholder="Search teacher..." oninput="filterUsers()">
                </div>

                <div class="filter-group">
                    <label>&nbsp;</label>
                    <button class="btn btn-secondary" onclick="clearFilters()">Clear Filters</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="table-container">
        <table class="table">

            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full name</th>
                    <th>Prsonal Email</th>
                    <th>Status</th>
                    <th>Joined</th>
                    <th>Subject</th>
                    <th>School Email</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="usersTableBody">
                <!-- Teacher will be populated -->
                @if (Model.Teachers.Count() > 0)
                {
                    foreach  (var teacher in Model.Teachers)
                    {
                        <tr>
                            <td>
                                <div class="font-medium">
                                    <p>T-@teacher.Id</p>
                                </div>
                            </td>
                            <td>
                                <div class="user-info">
                                    <div class="font-medium">@teacher.FirstName @teacher.LastName</div>
                                </div>
                            </td>
                            <td>@teacher.Email</td>
                            @*<td><span class="status-@teacher.Status">@teacher.Status</span></td> *@
                            <td><span class="status-@(teacher.Status == null?"inactive":teacher.Status)">@(teacher.Status == null? "inactive":teacher.Status)</span></td>
                            <td>@teacher.HireDate.ToString("yyyy-MM-dd")</td>
                            @foreach(var subject in teacher.Subjects)
                            {
                                <td>@subject.Name</td>
                            }
                            <td>
                                @foreach(var user in teacher.TeacherUsers){
                                    @user.UserName
                                }
                            <td>
                                @Model.Password
                            </td>
                            <td>
                                <div class="actions">
                                    <a class="btn btn-sm btn-secondary"
                                        asp-route-teacherId="@teacher.Id"
                                        asp-page="/admin/teachers/editteacher">Edit</a>
                                        <form style="display:inline;" method="post" asp-page-handler="Delete" asp-route-studentId="@teacher.Id" onsubmit="return confirm('Are you sure you want to delete this student?');">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                <!--End Teacher List-->
            </tbody>
        </table>
    </div>
</main>
@section Styles {
    <link rel="stylesheet" href="/css/admin-css/admin.css" />
    <link rel="stylesheet" href="/css/shared-css/css/reset.css">
    <link rel="stylesheet" href="/css/shared-css/typography.css">
    <link rel="stylesheet" href="/css/shared-css/components.css">
    <link rel="stylesheet" href="/css/shared-css/layout.css">
}
@section Scripts {
    <script>
        function filterUsers() {
            const statusFilter = document.getElementById("statusFilter").value.toLowerCase();
            const searchInput = document.getElementById("searchInput").value.toLowerCase();
            const tableBody = document.getElementById("usersTableBody");
            const rows = tableBody.getElementsByTagName("tr");

            for (let i = 0; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName("td");
                if (!cells.length) continue;

                const fullName = cells[1]?.innerText.toLowerCase() || "";
                const email = cells[2]?.innerText.toLowerCase() || "";
                const status = cells[3]?.innerText.toLowerCase() || "";
                const matchesStatus = statusFilter === "" || status === statusFilter;
                const matchesSearch =
                    searchInput === "" ||
                    fullName.includes(searchInput) ||
                    email.includes(searchInput) ||
                    status.includes(searchInput);

                if (matchesStatus && matchesSearch) {
                    rows[i].style.display = "";
                } else {
                    rows[i].style.display = "none";
                }
            }
        }

        function clearFilters() {
            document.getElementById("statusFilter").value = "";
            document.getElementById("searchInput").value = "";
            filterUsers();
        }
    </script>

}