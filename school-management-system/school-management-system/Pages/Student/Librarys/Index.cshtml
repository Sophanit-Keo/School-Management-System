@page
@model school_management_system.Pages.Student.Librarys.IndexModel
@{
    Layout = "_StudentLayout";
    ViewData["Title"] = "Student-Library";
}
<main class="main-content">
    <header class="header">
        <div>
            <h1>Digital Library</h1>
            <p class="text-gray-600">Access books, resources, and manage borrowings</p>
        </div>
        <div class="header-actions">
            <input type="text" class="search-input" placeholder="Search books...">
            <button class="btn btn-primary">Advanced Search</button>
        </div>
    </header>

    <!-- Library Stats -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon primary">📚</div>
            <div class="stat-content">
                <h3>5</h3>
                <p>Books Borrowed</p>
                <span class="stat-change neutral">Current</span>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon warning">⏰</div>
            <div class="stat-content">
                <h3>2</h3>
                <p>Due Soon</p>
                <span class="stat-change warning">Within 3 days</span>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon success">✅</div>
            <div class="stat-content">
                <h3>28</h3>
                <p>Books Read</p>
                <span class="stat-change positive">This year</span>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon error">💰</div>
            <div class="stat-content">
                <h3>$0</h3>
                <p>Outstanding Fines</p>
                <span class="stat-change positive">All clear</span>
            </div>
        </div>
    </div>

    <!-- Current Borrowings -->
    <div class="borrowings-section">
        <div class="card">
            <div class="card-header">
                <h3>Current Borrowings</h3>
                <a href="#" class="text-primary">Renew All</a>
            </div>

            <div class="books-grid">
                <div class="book-card">
                    <div class="book-cover">📖</div>
                    <div class="book-info">
                        <h4>Advanced Mathematics</h4>
                        <p>by Dr. Robert Smith</p>
                        <div class="book-meta">
                            <span class="borrowed-date">Borrowed: Dec 10</span>
                            <span class="due-date warning">Due: Dec 24</span>
                        </div>
                    </div>
                    <div class="book-actions">
                        <button class="btn btn-sm btn-secondary">Renew</button>
                        <button class="btn btn-sm btn-warning">Return</button>
                    </div>
                </div>

                <div class="book-card">
                    <div class="book-cover">📚</div>
                    <div class="book-info">
                        <h4>Shakespeare Complete Works</h4>
                        <p>by William Shakespeare</p>
                        <div class="book-meta">
                            <span class="borrowed-date">Borrowed: Dec 5</span>
                            <span class="due-date error">Due: Dec 19</span>
                        </div>
                    </div>
                    <div class="book-actions">
                        <button class="btn btn-sm btn-secondary">Renew</button>
                        <button class="btn btn-sm btn-warning">Return</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recommended Books -->
    <div class="recommendations-section">
        <div class="card">
            <div class="card-header">
                <h3>Recommended for You</h3>
                <a href="#" class="text-primary">View All</a>
            </div>

            <div class="recommendations-grid">
                <div class="recommendation-card">
                    <div class="book-cover">🔬</div>
                    <div class="book-details">
                        <h4>Physics Fundamentals</h4>
                        <p>Dr. Jane Wilson</p>
                        <div class="book-rating">⭐⭐⭐⭐⭐</div>
                    </div>
                    <button class="btn btn-sm btn-primary">Borrow</button>
                </div>

                <div class="recommendation-card">
                    <div class="book-cover">📐</div>
                    <div class="book-details">
                        <h4>Calculus Made Easy</h4>
                        <p>Prof. Michael Brown</p>
                        <div class="book-rating">⭐⭐⭐⭐⭐</div>
                    </div>
                    <button class="btn btn-sm btn-primary">Borrow</button>
                </div>

                <div class="recommendation-card">
                    <div class="book-cover">🎭</div>
                    <div class="book-details">
                        <h4>Modern Literature</h4>
                        <p>Dr. Sarah Johnson</p>
                        <div class="book-rating">⭐⭐⭐⭐⭐</div>
                    </div>
                    <button class="btn btn-sm btn-primary">Borrow</button>
                </div>
            </div>
        </div>
    </div>
</main>
@section Styles {
    <link rel="stylesheet" href="/css/student-css/student.css" />
    <link rel="stylesheet" href="/css/student-css/library.css" />
    <link rel="stylesheet" href="/css/shared-css/css/reset.css">
    <link rel="stylesheet" href="/css/shared-css/typography.css">
    <link rel="stylesheet" href="/css/shared-css/components.css">
    <link rel="stylesheet" href="/css/shared-css/layout.css">
}